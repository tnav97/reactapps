{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES2017"],
    "moduleResolution": "Node",
    "typeRoots": ["node_modules/@types", "./typings/"],
    "types": ["node", "jest", "@types/jest"],
    "outDir": "build",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "./build",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/**/__mocks__/*.ts",
    "./src/**/__mocks__/*.tsx"
  ]
}
