{
  "extends": "@nrwl/workspace/presets/npm.json",
  "npmScope": "@alcumus",
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/workspace/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "lint"]
      }
    }
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "targetDependencies": {
    "start-dev": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "build": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "test": [
      {
        "target": "test",
        "projects": "dependencies"
      }
    ]
  },
  "affected": {
    "defaultBase": "origin/develop"
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": false
    }
  }
}
