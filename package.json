{
  "name": "@alcumus/react-apps",
  "version": "0.0.1",
  "private": true,
  "description": "A monorepo of front-end apps built with Node/React for Alcumus",
  "engines": {
    "node": ">= 16.18.1",
    "npm": ">= 8.19.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "bootstrap:ci": "lerna bootstrap --ci --hoist",
    "nx:build": "cross-env DOTENV_CONFIG_PATH=../../.env nx run-many --target=build --all",
    "nx:build:project": "cross-env DOTENV_CONFIG_PATH=../../.env nx build $1",
    "nx:build:affected": "nx affected --target=build",
    "build": "cross-env DOTENV_CONFIG_PATH=../../.env lerna run build --stream",
    "build:appsonly": "npm run build -- --ignore={starter-app,@alcumus/starter-package}",
    "build:production": "cross-env DOTENV_CONFIG_PATH=../../.env cross-env NODE_ENV=production lerna run build --stream",
    "build:ap": "lerna run build --stream --scope={@alcumus/core,@alcumus/hooks,@alcumus/components,@alcumus/web-app,alcumus-portal}",
    "build:si": "lerna run build --stream --scope={@alcumus/core,@alcumus/components,@alcumus/web-app,safety-intelligence}",
    "build:ss": "lerna run build --stream --scope={@alcumus/components,@alcumus/web-app,self-signup}",
    "build:bp": "lerna run build --stream --scope={@alcumus/components,@alcumus/web-app,billing-portal}",
    "clean": "lerna clean -y",
    "diff": "lerna diff",
    "docker:volumes:warn": "echo 'Reminder: be careful when running docker:volumes:down on a QA environment!'",
    "docker:volumes:up": "docker volume create --name=react-apps-redis-volume",
    "docker:volumes:down": "docker volume rm react-apps-redis-volume",
    "docker:up:prod": "npm run docker:volumes:up && docker-compose -f docker-compose.prod.yml up",
    "docker:up": "npm run docker:volumes:up && docker-compose up --build -d",
    "docker:down": "docker-compose down -v --remove-orphans && npm run docker:volumes:warn",
    "docker:clean": "npm run docker:down && npm run docker:volumes:down",
    "helm:sync": "./charts/runHelmfile.sh sync $1 $2",
    "helm:lint": "./charts/runHelmfile.sh lint $1 $2",
    "nx:start": "cross-env DOTENV_CONFIG_PATH=../../.env nx run-many --target=start --all",
    "nx:start:dev:all": "cross-env DOTENV_CONFIG_PATH=../../.env nx run-many --target=start-dev --all",
    "nx:start:dev": "cross-env DOTENV_CONFIG_PATH=../../.env nx start-dev",
    "start": "lerna run start --parallel --stream -- -- dotenv_config_path=../../.env",
    "start-dev": "lerna run start-dev --stream -- -- dotenv_config_path=../../.env",
    "start:dev:ap": "lerna run start-dev --stream  --scope=alcumus-portal -- -- dotenv_config_path=../../.env",
    "start:ap": "lerna run start --stream  --scope=alcumus-portal -- -- dotenv_config_path=../../.env",
    "start:dev:si": "lerna run start-dev --stream  --scope={alcumus-portal,safety-intelligence} -- -- dotenv_config_path=../../.env",
    "start:dev:ss": "lerna run start-dev --stream  --scope=self-signup -- -- dotenv_config_path=../../.env",
    "start:dev:sc": "lerna run start-dev --stream  --scope=safecontractor-registration-portal -- -- dotenv_config_path=../../.env",
    "start:dev:bp": "lerna run start-dev --stream  --scope=billing-portal -- -- dotenv_config_path=../../.env",
    "start:watch": "lerna run start:watch --stream -- -- dotenv_config_path=../../.env",
    "start:si": "lerna run start --stream  --scope={alcumus-portal,safety-intelligence} -- -- dotenv_config_path=../../.env",
    "syncpack:fix": "syncpack fix-mismatches",
    "nx:test:all": "nx run-many --target=test --all",
    "nx:test": "nx test $1",
    "nx:test:affected": "nx affected --target=test",
    "test": "lerna run test --stream",
    "nx:test:coverage": "nx run-many --target=test:coverage --all",
    "test:coverage": "lerna run test:coverage --stream",
    "test:changed": "lerna run test:changed --stream",
    "test:ss": "npm run test:single --app=self-signup",
    "test:ci": "lerna run test --stream -- --  --ci --coverage --coverageReporters=text --coverageReporters=text-summary --reporters=default --reporters=jest-junit",
    "test:ap": "npm run test:single --app=alcumus-portal",
    "test:ci:appsonly": "lerna run test --stream --ignore={starter-app,@alcumus/starter-package} -- --  --ci --coverage --coverageReporters=text --coverageReporters=text-summary --reporters=default --reporters=jest-junit",
    "lint": "eslint .",
    "nx:lint:fix": "nx run-many --target=lint:fix --all",
    "lint:fix": "lerna run lint:fix --stream",
    "publish": "lerna version --conventional-commits",
    "pretest": "jest --clearCache",
    "prettier:format": "prettier --write .",
    "prettier:verify": "prettier --check .",
    "nx:storybook": "nx run-many --target=storybook --all",
    "storybook": "lerna run storybook --stream",
    "nx:storybook:build": "nx run-many --target=storybook:build --all",
    "storybook:build": "lerna run storybook:build --stream",
    "nx:styleguide": "nx storybook @alcumus/components",
    "styleguide": "lerna run storybook --stream --scope=@alcumus/components",
    "storybook:ss": "lerna run storybook --stream --scope=self-signup",
    "storybook:ap": "lerna run storybook --stream --scope=alcumus-portal",
    "storybook:bp": "lerna run storybook --stream --scope=billing-portal",
    "build-storybook": "lerna run build-storybook --stream",
    "cy:test-ap:smoke": "npx cypress run --headless --browser chrome --project ./apps/alcumus-portal --env grepTags=@smoke",
    "cy:test-ap": "npx cypress run --headless --browser chrome --project ./apps/alcumus-portal",
    "cy:test-ap:open": "npx cypress open --project ./apps/alcumus-portal",
    "cy:test-si": "npx cypress run --headless --browser chrome --project ./apps/safety-intelligence",
    "cy:test-si:open": "npx cypress open --browser chrome --project ./apps/safety-intelligence",
    "cy:test-ss": "npx cypress run --headless --browser chrome --project ./apps/self-signup",
    "cy:test-ss:open": "npx cypress open --project ./apps/self-signup",
    "cy:test-bp": "npx cypress run --headless --browser chrome --project ./apps/billing-portal",
    "cy:test-bp:open": "npx cypress open --project ./apps/billing-portal",
    "cy:test-all": "npm run cy:test-ap && npm run cy:test-si && npm run cy:test-ss && npm run cy:test-bp",
    "test:single": "lerna run test --stream --scope=$npm_config_app",
    "preversion": "npm run build && npm run test",
    "create:app": "ts-node ./scripts/createApp.ts",
    "generate:dockerfile": "ts-node ./scripts/generateDockerfile.ts $1 $2",
    "translate": "ts-node ./scripts/translate.ts $1 $2 $3 $4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alcumus/react-apps.git"
  },
  "keywords": [
    "alcumus",
    "frontend",
    "react",
    "monorepo"
  ],
  "bugs": {
    "url": "https://github.com/Alcumus/react-apps/issues"
  },
  "homepage": "https://github.com/Alcumus/react-apps#readme",
  "dependencies": {
    "cross-env": "^7.0.3",
    "csp-html-webpack-plugin": "^5.1.0",
    "cypress-localstorage-commands": "^2.2.3",
    "lerna": "^6.6.1",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@cypress/grep": "^3.1.5",
    "@mkonate/cypress-testrail-reporter": "^1.2.7",
    "@nrwl/cli": "^15.9.2",
    "@nrwl/js": "^15.9.2",
    "@nrwl/tao": "^15.9.2",
    "@nrwl/workspace": "^15.9.2",
    "@types/csp-html-webpack-plugin": "^3.0.2",
    "@types/flat": "^5.0.2",
    "@types/lodash": "~4.14.194",
    "@types/node": "^18.15.13",
    "@types/pug": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "axios": "^1.3.6",
    "cypress": "^10.8.0",
    "cypress-mochawesome-reporter": "^3.3.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-standard": "^5.0.0",
    "flat": "^5.0.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^13.2.1",
    "lodash": "^4.17.21",
    "prettier": "^2.8.7",
    "storybook-addon-pseudo-states": "1.15.2",
    "rimraf": "^5.0.0",
    "syncpack": "^9.8.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "5.0.4",
    "xss-polyglots": "^1.0.0"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown",
      "eslint . --fix"
    ]
  }
}
